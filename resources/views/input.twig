{{ asset_add("scripts.js", "anomaly.field_type.boolean::js/bootstrap-toggle.min.js") }}

<input
        type="checkbox"
        class="form-control"
        data-toggle="toggle"
        name="{{ field_type.getInputName() }}"
        data-size="{{ field_type.config.size }}"
        data-on="{{ trans(field_type.config.on_text) }}"
        data-off="{{ trans(field_type.config.off_text) }}"
        data-onstyle="{{ field_type.config.on_style }}"
        data-offstyle="{{ field_type.config.off_style }}"
        {{ field_type.value ? 'checked' }}
        >
